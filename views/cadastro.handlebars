<div class="container">
  <h2>
    Cadastro
  </h2>
  <p>Preencha os campos abaixo para se cadastrar.</p>
  <hr>
  {{{validation}}}
  <form action="/cadastro" method="post">
    <div class="mb-2">
      <label for="nome" class="form-label">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" required>
    </div>
    <div class="mb-2">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-2">
      <label for="senha" class="form-label">Senha</label>
      <input type="password" class="form-control" id="senha" name="senha" required>
      <div class="form-check">
        <input type="checkbox" id="showPassword">
        <label for="showPassword">Mostrar Senha</label>
      </div>
    </div>
    <div class="mb-2">
      <label for="descricao">Descricao</label>
      <textarea name="descricao" id="descricao" cols="30" rows="10" style="height: 144px;" class="form-control"></textarea>
    </div>
    <div class="mb-3 d-grid gap-2">
      <button type="submit" class="btn btn-success">Cadastrar</button>
      <a href="/login" class="btn btn-link">Já possui uma conta?
      <span>Faça login</span></a>
    </div>
  </form>
</div>

<script>
  "use strict"

  const input = document.getElementById("senha")
  const checkbox = document.getElementById("showPassword")

  checkbox.addEventListener("change", ()=>{
    input.type = checkbox.checked? "text" : "password"
  })
</script>